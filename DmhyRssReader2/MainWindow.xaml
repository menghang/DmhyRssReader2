<Window
    x:Class="DmhyRssReader2.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:DmhyRssReader2"
    mc:Ignorable="d"
    Title="MainWindow"
    Height="500"
    Width="1000">
    <DockPanel>
        <Menu
            DockPanel.Dock="Top">
            <MenuItem
                Header="文件">
                <MenuItem
                    Header="关闭" />
            </MenuItem>
            <MenuItem
                Header="选项">
                <MenuItem
                    Header="设置" />
            </MenuItem>
            <MenuItem
                Header="帮助">
                <MenuItem
                    Header="关于" />
            </MenuItem>
        </Menu>
        <TabControl
            DockPanel.Dock="Top">
            <TabItem
                Header="配置管理"
                DataContext="{Binding ConfigManageTab}">
                <DockPanel>
                    <Grid
                        DockPanel.Dock="Bottom">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition
                                Width="*" />
                            <ColumnDefinition
                                Width="*" />
                            <ColumnDefinition
                                Width="*" />
                            <ColumnDefinition
                                Width="*" />
                        </Grid.ColumnDefinitions>
                        <CheckBox
                            Content="开启自动更新下载"
                            IsChecked="{Binding EnableAutoUpdate}"
                            VerticalContentAlignment="Center"
                            Height="27"
                            Margin="5" />
                        <DockPanel
                            Margin="5"
                            Grid.Column="3">
                            <Canvas
                                Background="{Binding StatusColor}"
                                Height="27"
                                Width="27" />
                            <Label
                                Content="{Binding StatusText}"
                                HorizontalContentAlignment="Center"
                                VerticalContentAlignment="Center"
                                Height="27" />
                        </DockPanel>
                    </Grid>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition
                                Width="*" />
                            <ColumnDefinition
                                Width="3*" />
                        </Grid.ColumnDefinitions>
                        <GroupBox
                            Header="配置"
                            DataContext="{Binding CurrentConfig}"
                            Grid.Column="0"
                            Margin="5">
                            <StackPanel>
                                <DockPanel
                                    Margin="5">
                                    <Label
                                        Content="关键词:"
                                        VerticalContentAlignment="Center" />
                                    <TextBox
                                        Text="{Binding Keyword}"
                                        Height="27"
                                        HorizontalContentAlignment="Center"
                                        VerticalContentAlignment="Center" />
                                </DockPanel>
                                <DockPanel
                                    Margin="5">
                                    <Label
                                        Content="联盟ID:"
                                        VerticalContentAlignment="Center" />
                                    <TextBox
                                        Text="{Binding TeamId}"
                                        Height="27"
                                        HorizontalContentAlignment="Center"
                                        VerticalContentAlignment="Center" />
                                </DockPanel>
                                <DockPanel
                                    Margin="5">
                                    <Label
                                        Content="分类ID:"
                                        VerticalContentAlignment="Center" />
                                    <TextBox
                                        Text="{Binding CategoryId}"
                                        Height="27"
                                        HorizontalContentAlignment="Center"
                                        VerticalContentAlignment="Center" />
                                </DockPanel>
                                <Button
                                    Content="搜索"
                                    Height="27"
                                    Margin="5"
                                    Click="ButtonSearch_Click" />
                                <Separator
                                    DockPanel.Dock="Top" />
                                <DockPanel
                                    Margin="5"
                                    DockPanel.Dock="Top">
                                    <Label
                                        Content="配置名称:"
                                        HorizontalContentAlignment="Center"
                                        VerticalContentAlignment="Center" />
                                    <TextBox
                                        Text="{Binding Name}"
                                        Height="27"
                                        HorizontalContentAlignment="Center"
                                        VerticalContentAlignment="Center" />
                                </DockPanel>
                                <Button
                                    Content="添加到配置列表"
                                    Click="ButtonAddConfig_Click"
                                    Height="27"
                                    Margin="5" />
                            </StackPanel>
                        </GroupBox>
                        <TabControl
                            Grid.Column="1"
                            Margin="5">
                            <TabItem
                                Header="搜索结果">
                                <DataGrid
                                    ItemsSource="{Binding SearchResults}"
                                    SelectedItem="{Binding SelectedResult}"
                                    Grid.Column="1"
                                    Margin="5"
                                    AutoGenerateColumns="False"
                                    CanUserResizeRows="False"
                                    CanUserAddRows="False"
                                    CanUserDeleteRows="False"
                                    SelectionMode="Single"
                                    IsReadOnly="True"
                                    RowHeight="27"
                                    ColumnHeaderStyle="{StaticResource DataGridColumnHeaderStyle}">
                                    <DataGrid.ContextMenu>
                                        <ContextMenu>
                                            <MenuItem
                                                Header="打开网页"
                                                Click="MenuItemOpenVideoPage_Click" />
                                            <MenuItem
                                                Header="复制磁力链接"
                                                Click="MenuItemCopyMagnetLink_Click" />
                                            <MenuItem
                                                Header="复制选定的磁力链接"
                                                Click="MenuItemCopySelectedMagnetLink_Click" />
                                            <MenuItem
                                                Header="复制全部磁力链接"
                                                Click="MenuItemCopyAllMagnetLink_Click" />
                                            <MenuItem
                                                Header="下载磁力链接"
                                                Click="MenuItemDownloadMagnetLink_Click" />
                                            <MenuItem
                                                Header="下载选定的磁力链接"
                                                Click="MenuItemDownloadSelectedMagnetLink_Click" />
                                            <MenuItem
                                                Header="下载全部磁力链接"
                                                Click="MenuItemDownloadAllMagnetLink_Click" />
                                        </ContextMenu>
                                    </DataGrid.ContextMenu>
                                    <DataGrid.Columns>
                                        <DataGridCheckBoxColumn
                                            Header="选择"
                                            Binding="{Binding Selected,UpdateSourceTrigger=PropertyChanged}"
                                            ElementStyle="{StaticResource CellCheckBoxStyle}" />
                                        <DataGridCheckBoxColumn
                                            Header="已下载"
                                            Binding="{Binding Downloaded,Mode=OneWay}"
                                            IsReadOnly="True"
                                            ElementStyle="{StaticResource CellCheckBoxStyle}" />
                                        <DataGridTextColumn
                                            Header="发布时间"
                                            Binding="{Binding PubDate,Mode=OneWay}"
                                            IsReadOnly="True"
                                            ElementStyle="{StaticResource CellTextBlockStyle}" />
                                        <DataGridTextColumn
                                            Header="分类"
                                            Binding="{Binding Category,Mode=OneWay}"
                                            IsReadOnly="True"
                                            ElementStyle="{StaticResource CellTextBlockStyle}" />
                                        <DataGridTextColumn
                                            Header="标题"
                                            Binding="{Binding Title,Mode=OneWay}"
                                            IsReadOnly="True"
                                            ElementStyle="{StaticResource CellTextBlockStyle}" />
                                        <DataGridTextColumn
                                            Header="发布人"
                                            Binding="{Binding Author,Mode=OneWay}"
                                            IsReadOnly="True"
                                            ElementStyle="{StaticResource CellTextBlockStyle}" />
                                    </DataGrid.Columns>
                                </DataGrid>
                            </TabItem>
                            <TabItem
                                Header="配置列表">
                                <DataGrid
                                    ItemsSource="{Binding ConfigList}"
                                    SelectedItem="{Binding SelectedConfig}"
                                    Grid.Column="1"
                                    Margin="5"
                                    AutoGenerateColumns="False"
                                    CanUserResizeRows="False"
                                    CanUserAddRows="False"
                                    CanUserDeleteRows="False"
                                    SelectionMode="Single"
                                    IsReadOnly="True"
                                    VerticalContentAlignment="Center"
                                    RowHeight="27"
                                    ColumnHeaderStyle="{StaticResource DataGridColumnHeaderStyle}">
                                    <DataGrid.ContextMenu>
                                        <ContextMenu>
                                            <MenuItem
                                                Header="编辑"
                                                Click="MenuItemEditConfig_Click" />
                                            <MenuItem
                                                Header="删除"
                                                Click="MenuItemDeleteConfig_Click" />
                                            <MenuItem
                                                Header="刷新更新列表"
                                                Click="MenuItemRefreshUpdateList_Click" />
                                        </ContextMenu>
                                    </DataGrid.ContextMenu>
                                    <DataGrid.Columns>
                                        <DataGridCheckBoxColumn
                                            Header="选定"
                                            Binding="{Binding Selected,UpdateSourceTrigger=PropertyChanged}"
                                            ElementStyle="{StaticResource CellCheckBoxStyle}" />
                                        <DataGridTextColumn
                                            Header="配置名称"
                                            Binding="{Binding Name,Mode=OneWay}"
                                            IsReadOnly="True"
                                            ElementStyle="{StaticResource CellTextBlockStyle}" />
                                        <DataGridTextColumn
                                            Header="关键词"
                                            Binding="{Binding Keyword,Mode=OneWay}"
                                            IsReadOnly="True"
                                            ElementStyle="{StaticResource CellTextBlockStyle}" />
                                        <DataGridTextColumn
                                            Header="联盟ID"
                                            Binding="{Binding TeamId,Mode=OneWay}"
                                            IsReadOnly="True"
                                            ElementStyle="{StaticResource CellTextBlockStyle}" />
                                        <DataGridTextColumn
                                            Header="分类ID"
                                            Binding="{Binding CategoryId,Mode=OneWay}"
                                            IsReadOnly="True"
                                            ElementStyle="{StaticResource CellTextBlockStyle}" />
                                        <DataGridTextColumn
                                            Header="最后更新时间"
                                            Binding="{Binding LastUpdate,Mode=OneWay}"
                                            IsReadOnly="True"
                                            ElementStyle="{StaticResource CellTextBlockStyle}" />
                                        <DataGridTextColumn
                                            Header="最后刷新时间"
                                            Binding="{Binding LastRefresh,Mode=OneWay}"
                                            IsReadOnly="True"
                                            ElementStyle="{StaticResource CellTextBlockStyle}" />
                                    </DataGrid.Columns>
                                </DataGrid>
                            </TabItem>
                            <TabItem
                                Header="更新列表">
                                <DataGrid
                                    ItemsSource="{Binding UpdateList}"
                                    SelectedItem="{Binding SelectedVideo}"
                                    Grid.Column="1"
                                    Margin="5"
                                    AutoGenerateColumns="False"
                                    CanUserResizeRows="False"
                                    CanUserAddRows="False"
                                    CanUserDeleteRows="False"
                                    SelectionMode="Single"
                                    IsReadOnly="True"
                                    RowHeight="27"
                                    ColumnHeaderStyle="{StaticResource DataGridColumnHeaderStyle}">
                                    <DataGrid.ContextMenu>
                                        <ContextMenu>
                                            <MenuItem
                                                Header="打开网页"
                                                Click="MenuItemOpenVideoPage2_Click" />
                                            <MenuItem
                                                Header="复制磁力链接"
                                                Click="MenuItemCopyMagnetLink2_Click" />
                                            <MenuItem
                                                Header="复制选定的磁力链接"
                                                Click="MenuItemCopySelectedMagnetLink2_Click" />
                                            <MenuItem
                                                Header="复制全部磁力链接"
                                                Click="MenuItemCopyAllMagnetLink2_Click" />
                                            <MenuItem
                                                Header="下载磁力链接"
                                                Click="MenuItemDownloadMagnetLink2_Click" />
                                            <MenuItem
                                                Header="下载选定的磁力链接"
                                                Click="MenuItemDownloadSelectedMagnetLink2_Click" />
                                            <MenuItem
                                                Header="下载全部磁力链接"
                                                Click="MenuItemDownloadAllMagnetLink2_Click" />
                                        </ContextMenu>
                                    </DataGrid.ContextMenu>
                                    <DataGrid.Columns>
                                        <DataGridCheckBoxColumn
                                            Header="选择"
                                            Binding="{Binding Selected,UpdateSourceTrigger=PropertyChanged}"
                                            ElementStyle="{StaticResource CellCheckBoxStyle}" />
                                        <DataGridTextColumn
                                            Header="发布时间"
                                            Binding="{Binding PubDate,Mode=OneWay}"
                                            IsReadOnly="True"
                                            ElementStyle="{StaticResource CellTextBlockStyle}" />
                                        <DataGridTextColumn
                                            Header="分类"
                                            Binding="{Binding Category,Mode=OneWay}"
                                            IsReadOnly="True"
                                            ElementStyle="{StaticResource CellTextBlockStyle}" />
                                        <DataGridTextColumn
                                            Header="标题"
                                            Binding="{Binding Title,Mode=OneWay}"
                                            IsReadOnly="True"
                                            ElementStyle="{StaticResource CellTextBlockStyle}" />
                                        <DataGridTextColumn
                                            Header="发布人"
                                            Binding="{Binding Author,Mode=OneWay}"
                                            IsReadOnly="True"
                                            ElementStyle="{StaticResource CellTextBlockStyle}" />
                                    </DataGrid.Columns>
                                </DataGrid>
                            </TabItem>
                        </TabControl>
                    </Grid>
                </DockPanel>
            </TabItem>
        </TabControl>
    </DockPanel>
</Window>
